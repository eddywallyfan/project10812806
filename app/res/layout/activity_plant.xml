<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:padding="5dp"
    tools:context=".MainActivity" >
 
	<TextView
        android:id="@+id/PlantNaam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"/>

    <TextView
        android:id="@+id/PlantMaat"
        android:layout_below="@id/PlantNaam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp" />
    
    <TextView
        android:id="@+id/PlantAantal"
        android:layout_toRightOf="@id/PlantMaat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp" />
    
    <Button
        android:id="@+id/btnWagen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="56dp"
        android:layout_marginRight="28dp"
        android:onClick="putcart"
        android:text="@string/winkelwagen" />

    <EditText
        android:id="@+id/aantaltxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btnWagen"
        android:layout_alignLeft="@+id/PlantMaat"
        android:ems="10"
        android:hint="@string/TekstvakAantal" />

</RelativeLayout>